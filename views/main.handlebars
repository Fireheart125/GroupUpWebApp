<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>GroupUp!</title>

    {{> commonCSS }}

    <!-- Custom styles for this template -->
    <link href="/css/groupup.css" rel="stylesheet">

  </head>

  <body>
    <!--                        Start Body                            -->


    <!-- Static Nav Bar Partial is in /views/partials/staticNacBar.handlebars -->
    {{> staticNavBar }}

    <!-- ...........................................................................
        ............................................................................
        Second part : logo, page menu logo
    -->
    <div class="container">
      <div align="center" class="top_logo">
        <img src="../images/logo_main1.png"><br>
        <h2>Hi, {{mydata.name}}</h2>
        You've created {{groupNum}} groups! Manage in setting page!
      </div>
    </div> <!-- /container -->
    <!-- ........................................................................... -->


    <!-- ...........................................................................
        ............................................................................
        Main part : Contents
    -->
    <div class="container">
      <!-- Example row of columns -->
      <div class="row">

        <!--    First column Start    -->
        <div class="col-md-4">                            
          <h2>My Courses</h2>
          <p class="elem_list"> 
            {{#each mydata.classlist}}
              <button id="allclass" type="button" class="btn btn-info">
              <a href="./myclass/{{id}}">{{class}}</a>
              <div class="btn-group btn-group-xs" role="group" aria-label="..."><a href="./myclass/{{id}}/removeClass"><span class="glyphicon glyphicon-remove"></span></a></div>
              </button>
            {{/each}}
          </p>

            <h3>Add another class!</h3>
            <!-- Single button -->
            <div class="col-xs-12 btn-group">
              <button type="button" class="col-xs-12 btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Current Classes <span class="caret"></span>
              </button>
              <ul class="col-xs-12 dropdown-menu">
                <li><a href="#">Add another Class</a></li>
                {{#each classes.allClasses}}
                <li><a href="myclass/{{id}}/addclass">{{class}}</a></li>
                {{/each}}
              </ul>
            </div> 
            <!-- End of button -->


        </div>      <!-- --> <!-- --> <!-- --> <!--    First column End    -->
        
        <!--    First column End    -->

        <!-- +++++ Right side (1. Group inPerson) page start +++++ -->
        <div class="col-md-4" align="center">
            <img src="../../images/in-person.png" class="col-xs-12">
            <p class="elem_list" align="center"><br> 

                <!-- +++++ Each group space start! +++++ -->
                {{#each mydata.group_person}}
                <div class="class_elem">
                  <div class="col-xs-12 container-fluid panel panel-default" data-toggle="collapse" data-target="#demo{{id}}">
                  <h4 class="text-uppercase">
                    <div class="btn-group btn-group-xs" role="group" aria-label="..."><a href="myclass/{{id}}/removeGroup"><span class="glyphicon glyphicon-remove"></span></a></div>
                    <button id="in-person" type="button" class="btn btn-info">In-Person</button>  {{name}}</h4>
                      <div id="icons" align="center">
                         <div class="col-xs-3"><img src="../../images/people_40.png"/><p>Max: {{max}}</p></div>
                         <div class="col-xs-6"><img src="../../images/location_40.png"/><p>{{place}}</p></div>
                         <div class="col-xs-3"><img src="../../images/time_40.png"/> <p>{{time}}</p></div>
                      
                         <button id="group_detail" type="button" class="col-xs-12 btn btn-info">Please click to get more information!</button><br>
                      </div><br> <!-- id=icons -->
                    </button>
                    <div id="demo{{id}}" class="collapse">
                      <p class="panel body class_descrip"><br>
                        <h4 id="descr">Description</h4><p>{{description}}</p><br>
                      </p>
                    </div> <!-- id="demo2" -->
                  </div> <!-- class: col-xs-12 container-fluid panel panel-default -->
                </p>

                </div> <!-- class_elem --> 
                {{/each}}
                <!-- +++++ Each group space End! +++++ -->  

        </div> 
        <!-- +++++ Right side of page End +++++ -->

        <!-- +++++ Right side (2. Group Online) page start +++++ -->
        <div class="col-md-4">
            <img src="../../images/online.png" class="col-xs-12">
            <p class="elem_list" align="center"><br>

                <!-- +++++ Each group space start! +++++ -->
                {{#each mydata.group_online}}
                <div class="class_elem">
                  <div class="col-xs-12 container-fluid panel panel-default" data-toggle="collapse" data-target="#demo{{id}}">
                  <h4 class="text-uppercase">
                    <div class="btn-group btn-group-xs" role="group" aria-label="..."><a href="myclass/{{id}}/removeGroup"><span class="glyphicon glyphicon-remove"></span></a></div>
                    <button id="online" type="button" class="btn btn-info">Online</button>  {{name}}</h4>
                      <div id="icons">
                         <button id="forumLink" type="button" class="btn btn-info" align="center"><a href="{{address}}" align="center">Link to Forum:</button></a> {{address}} 
                         <button id="group_detail" type="button" class="col-xs-12 btn btn-info">Please click to get more information!</button><br>
                      </div><br> <!-- id=icons -->
                    </button>
                    <div id="demo{{id}}" class="collapse">
                      <p class="panel body class_descrip"> <br>
                        <h4 id="descr">Description</h4><p>{{description}}</p><br>
                    </div> <!-- id="demo2" -->
                  </div> <!-- class: col-xs-12 container-fluid panel panel-default -->
                </p>

                </div> <!-- class_elem --> 
                {{/each}}
                <!-- +++++ Each group space End! +++++ -->  

        </div> 
        <!-- +++++ Right side of page End +++++ -->
                                                                   

      </div> 
      <!-- End of row -->

    </div> <!-- End of container -->
    <!-- ........................................................................... -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    {{> commonJS }}

    <!--                        End Body                            -->
  </body>
</html>