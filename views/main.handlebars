<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>GroupUp!</title>

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="css/ie10-viewport-bug-workaround.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/groupup.css" rel="stylesheet">

    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <script src="../../assets/js/ie-emulation-modes-warning.js"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <!--                        Start Body                            -->

    <!-- ...........................................................................
        ............................................................................
        This is Header & Naviagation bar & Drop Down menu!
    -->
    <!-- Static navbar -->
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><img src="images/logo_top_30.png"></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">

          <ul class="nav navbar-nav navbar-right">
            <li><a href="main">My page</a></li>
            <li><a href="setting">Setting<span class="sr-only">(current)</span></a></li>
            <li><a href="help">Help</a></li>
            <li><a href="/">Sign Out</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <!-- ........................................................................... -->


    <!-- ...........................................................................
        ............................................................................
        Second part : logo, page menu logo
    -->
    <div class="container">
      <div align="center" class="top_logo">
        <img src="images/logo_main1.png"><br>
        <h2>Hi, Alok!</h2>
      </div>
    </div> <!-- /container -->
    <!-- ........................................................................... -->


    <!-- ...........................................................................
        ............................................................................
        Main part : Contents
    -->
    <div class="container">
      <!-- Example row of columns -->
      <div class="row">

        <!--    First column Start    -->
        <div class="col-md-4">                            
          <h2>My Courses</h2>
          <p class="elem_list"> 
            {{#each classlist}}
              <button id="allclass" type="button" class="btn btn-info"><a href="myclass/{{id}}">{{class}}</a></button>
            {{/each}}
          </p>

        </div>
        <!--    First column End    -->

        <!-- +++++ Right side (1. Group inPerson) page start +++++ -->
        <div class="col-md-4" align="center">
            <img src="../images/in-person.png" class="col-xs-12">
            <p class="elem_list" align="center"><br> 

                <!-- +++++ Each group space start! +++++ -->
                {{#each group_person}}
                <div class="class_elem">
                  <div class="col-xs-12 container-fluid panel panel-default" data-toggle="collapse" data-target="#demo{{id}}">
                  <h4 class="text-uppercase">
                    <button id="in-person" type="button" class="btn btn-info">In-Person</button>  {{name}}</h4>
                      <div id="icons" align="center">
                         <div class="col-xs-3"><img src="../images/people_40.png"/><p>Max: {{max}}</p></div>
                         <div class="col-xs-6"><img src="../images/location_40.png"/><p>{{place}}</p></div>
                         <div class="col-xs-3"><img src="../images/time_40.png"/> <p>{{time}}</p></div>
                      
                         <button id="group_detail" type="button" class="col-xs-12 btn btn-info">Please click to get more information!</button><br>
                      </div><br> <!-- id=icons -->
                    </button>
                    <div id="demo{{id}}" class="collapse">
                      <p class="panel body class_descrip"><br>
                        <h4 id="descr">Description</h4><p>{{description}}</p><br>
                      </p>
                    </div> <!-- id="demo2" -->
                  </div> <!-- class: col-xs-12 container-fluid panel panel-default -->
                </p>

                </div> <!-- class_elem --> 
                {{/each}}
                <!-- +++++ Each group space End! +++++ -->  

        </div> 
        <!-- +++++ Right side of page End +++++ -->

        <!-- +++++ Right side (2. Group Online) page start +++++ -->
        <div class="col-md-4">
            <img src="../images/online.png" class="col-xs-12">
            <p class="elem_list" align="center"><br>

                <!-- +++++ Each group space start! +++++ -->
                {{#each group_online}}
                <div class="class_elem">
                  <div class="col-xs-12 container-fluid panel panel-default" data-toggle="collapse" data-target="#demo{{id}}">
                  <h4 class="text-uppercase">
                    <button id="online" type="button" class="btn btn-info">Online</button>  {{name}}</h4>
                      <div id="icons">
                         <p>Link : {{address}}</p>
                         <button id="group_detail" type="button" class="col-xs-12 btn btn-info">Please click to get more information!</button><br>
                      </div><br> <!-- id=icons -->
                    </button>
                    <div id="demo{{id}}" class="collapse">
                      <p class="panel body class_descrip"> <br>
                        <h4 id="descr">Description</h4><p>{{description}}</p><br>
                    </div> <!-- id="demo2" -->
                  </div> <!-- class: col-xs-12 container-fluid panel panel-default -->
                </p>

                </div> <!-- class_elem --> 
                {{/each}}
                <!-- +++++ Each group space End! +++++ -->  

        </div> 
        <!-- +++++ Right side of page End +++++ -->
                                                                   


      </div> 
      <!-- End of row -->

    </div> <!-- End of container -->
    <!-- ........................................................................... -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/jquery.min.js"><\/script>')</script>
    <script src="js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="js/ie10-viewport-bug-workaround.js"></script>


    <!--                        End Body                            -->
  </body>
</html>
