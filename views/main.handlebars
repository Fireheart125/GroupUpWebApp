<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>GroupUp!</title>

    {{> commonCSS }}

    <!-- Custom styles for this template -->
    <link href="/css/groupup.css" rel="stylesheet">

  </head>

  <body>
    <!--                        Start Body                            -->


    <!-- Static Nav Bar Partial is in /views/partials/staticNacBar.handlebars -->
    <!-- ...........................................................................
    ............................................................................
    This is Header & Naviagation bar & Drop Down menu!
-->
    <!-- Static navbar -->
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><img src="/images/logo_top_30.png"></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">

          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">My page</a></li>
            <li><a href="./setting">Setting</a></li>
            <li><a href="/">Sign Out</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <!-- ........................................................................... -->

    <!-- ...........................................................................
        ............................................................................
        Second part : logo, page menu logo
    -->
    <div class="container">
      <div align="center" class="top_logo">
        <img src="../images/mygroupup.png"><br>
        <h2>Hello, "{{mydata.name}}"! <a href="./setting"><button id="in-person" type="button" class="btn btn-info">Change</button></a></h2>
        You've created {{groupNum}} groups! You can remove this groups in setting page!
      </div>
    </div> <!-- /container --><br>
    <!-- ........................................................................... -->


    <!-- ...........................................................................
        ............................................................................
        Main part : Contents
    -->
    <div class="container">
      <!-- Example row of columns -->
      <div class="row">

        <!--    First column Start    -->
        <div class="col-md-4">
          {{> helpModal }}                 
          <h2>My Courses</h2>
          <p class="elem_list"> 
            {{#each mydata.classlist}}
              <button id="allclass" type="button" class="btn btn-info">
              <a href="./myclass/{{id}}">{{class}}</a>
              <div class="btn-group btn-group-xs" role="group" aria-label="..."><a href="./myclass/{{id}}/removeClass"><span class="glyphicon glyphicon-remove"></span></a></div>
              </button>
            {{/each}}
          </p>

            <h3>Add another class!</h3>
            <!-- Single button -->
            <div class="col-xs-12 btn-group">
              <button type="button" id="class-add-btn" class="col-xs-12 btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Click a class you want to add <span class="caret"></span>
              </button>
              <ul class="col-xs-12 dropdown-menu">
                <li><a href="#">List of classes :</a></li>
                {{#each classes.allClasses}}
                <li><a href="myclass/{{id}}/addclass">{{class}}</a></li>
                {{/each}}
              </ul>
            </div> 
            <!-- End of button -->


        </div>      <!-- --> <!-- --> <!-- --> <!--    First column End    -->
        
        <!--    First column End    -->

        <!-- +++++ Right side (1. Group inPerson) page start +++++ -->
        <div class="col-md-4">
            <img src="../../images/menu_main_person.png" class="col-xs-12">

                <!-- +++++ Each group space start! +++++ -->
                {{#each mydata.group_person}}
                  <div class="col-xs-12 container-fluid panel panel-default" data-toggle="collapse" data-target="#demo{{id}}">
                  <h4 class="text-uppercase">
                    <div class="btn-group btn-group-xs" role="group" aria-label="..."><a href="myclass/{{id}}/removeGroup"><span class="glyphicon glyphicon-remove"></span></a></div>
                    <button id="in-person" type="button" class="btn btn-info">In-Person</button>  {{name}}</h4>
                      <div id="icons"><hr>
                         This group for class <b><span style="text-transform: uppercase">{{className}}</span></b><br><br>
                         <span class="glyphicon glyphicon-user"></span>  <b>Max:</b> {{max}}<br><br>
                         <span class="glyphicon glyphicon-map-marker"></span>  <b>Place:</b> {{place}}<br><br>
                         <span class="glyphicon glyphicon-time"></span>  <b>Time:</b> {{time}}<br><br>
                         <button id="group_detail" type="button" class="col-xs-12 btn btn-info">
                         <span class="glyphicon glyphicon-arrow-down"></span> Please click to see description!</button><br>
                      </div><br> <!-- id=icons -->
                    </button>
                    <div id="demo{{id}}" class="collapse">
                      <p class="panel body class_descrip"><br>
                        <h4 id="descr">Description</h4><p>{{description}}</p><br>
                      </p>
                    </div> <!-- id="demo2" -->
                  </div> <!-- class: col-xs-12 container-fluid panel panel-default -->
                </p>

                {{/each}}
                <!-- +++++ Each group space End! +++++ -->  

        </div> 
        <!-- +++++ Right side of page End +++++ -->

        <!-- +++++ Right side (2. Group Online) page start +++++ -->
        <div class="col-md-4">
            <img src="../../images/menu_main_online.png" class="col-xs-12">
            <p class="elem_list" align="center"><br>

                <!-- +++++ Each group space start! +++++ -->
                {{#each mydata.group_online}}
                  <div class="col-xs-12 container-fluid panel panel-default" data-toggle="collapse" data-target="#demo{{id}}">
                  <h4 class="text-uppercase">
                    <div class="btn-group btn-group-xs" role="group" aria-label="..."><a href="myclass/{{id}}/removeGroup"><span class="glyphicon glyphicon-remove"></span></a></div>
                    <button id="online" type="button" class="btn btn-info">Online</button> {{name}}</h4>
                      <div id="icons"><hr>
                         This group for class <b><span style="text-transform: uppercase">{{className}}</span></b><br><br>
                         <span class="glyphicon glyphicon-home"></span>  <b>Forum:</b> {{address}}<br><br>
                         <button id="forumLink" type="button" class="btn btn-info" align="center"><a href="{{address}}" target="_blank" align="center">Link to Forum</button></a><br><br>
                         <button id="group_detail" type="button" class="col-xs-12 btn btn-info">
                         <span class="glyphicon glyphicon-arrow-down"></span> Please click to see description!</button><br>
                      </div><br> <!-- id=icons -->
                    </button>
                    <div id="demo{{id}}" class="collapse">
                      <p class="panel body class_descrip"><br>
                        <h4 id="descr">Description</h4><p>{{description}}</p><br>
                      </p>
                    </div> <!-- id="demo2" -->
                  </div> <!-- class: col-xs-12 container-fluid panel panel-default -->
                </p>

                {{/each}}
                <!-- +++++ Each group space End! +++++ -->  

        </div> 
        <!-- +++++ Right side of page End +++++ -->
                                                                   

      </div> 
      <!-- End of row -->

    </div> <!-- End of container -->
    <!-- ........................................................................... -->

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    {{> commonJS }}

    <!--                        End Body                            -->
  </body>
</html>