    <!-- Main part : Contents -->
    <div class="container">
      <!-- Setting changes/Account Information -->
      <form action="setting"> <!--To be changed to rewrite info-->
      
        <fieldset>
          <legend>Personal Information:</legend>
          Your ID:
          <input readonly required value="{{userID}}" name="userID"><br><br>

          Your name is <b>{{data.name}}</b>, <br>Edit your name: 
          <input type="text" name="name">
          <input type="submit" value="Submit"><br><br>

          Your email address is <b>{{data.email}}</b>, <br>Change your email:
          <input type="text" name="email">
          <input type="submit" value="Submit"><br><br>
        </fieldset><br>

        <fieldset>
          <!--Account information (password)-->
          <legend>Account Information:</legend>
          <form class="pure-form">
              <fieldset>
                Change Password:
                <input type="password" placeholder="Password" id="password" name="password">
                <input type="password" placeholder="Confirm Password" id="confirm_password">
                <button type="submit" class="pure-button pure-button-primary">Confirm</button>
              </fieldset>
          </form>
        </fieldset>
      </form><br><br>

      <legend>Groups You've created</legend>
      <div>
                {{#each data.group_own}}
                <div class="class_elem">
                  <div class="col-xs-12 container-fluid panel panel-default">
                  <h4 class="text-uppercase">{{name}}</h4><hr>
                    <span class="glyphicon glyphicon-leaf"></span> Class : <span style="text-transform: uppercase">{{className}}</span><br><br>
                    <span class="glyphicon glyphicon-star"></span> Group type : {{grouptype}}<br><br>
                    <h4 id="descr"><span class="glyphicon glyphicon-comment"></span> Description</h4>{{description}}<br><hr>
                    <a href="myclass/{{className}}/{{id}}/setting/remove">
                    <button type="button" class="col-xs-12 btn btn-info" onclick="return confirmDelete()">Delete the group!</button></a><br><br><br>
                  </div> <!-- class: col-xs-12 container-fluid panel panel-default -->
                </div> <!-- class_elem --> 
                {{/each}}
                <!-- +++++ Each group space End! +++++ -->  
      </div>

    </div> <!-- Finish container -->


